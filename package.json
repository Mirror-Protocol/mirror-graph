{
  "name": "mirror-graph",
  "version": "1.0.1",
  "main": "src/main.ts",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mirror-Protocol/mirror-graph.git"
  },
  "scripts": {
    "dev": "nodemon --signal SIGINT --exec ts-node -e ts,json,R --files -r tsconfig-paths/register src/main.ts",
    "start": "NODE_ENV=production node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/main.ts",
    "cli": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/cli/main.ts",
    "bot": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/bot/main.ts",
    "collect": "node --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/collector/main.ts",
    "collect-dev": "nodemon --signal SIGINT --exec ts-node -e ts,json,R --files -r tsconfig-paths/register src/collector/main.ts",
    "migration-gen": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -c migration -d src/orm/migrations -n",
    "migration-revert": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -c migration -d src/orm/migrations",
    "migration-run": "node --require ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -c migration -d src/orm/migrations",
    "test": "jest",
    "lint": "eslint src --ext .js,.ts",
    "prettier": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@mirror-protocol/mirror-airdrop": "^1.0.7",
    "@sentry/node": "^6.2.5",
    "@terra-money/terra.js": "^1.6.6",
    "apollo-server": "^2.19.1",
    "apollo-server-koa": "^2.19.1",
    "bignumber.js": "^9.0.1",
    "bluebird": "^3.7.2",
    "class-validator": "^0.12.2",
    "commander": "^6.2.1",
    "csv-writer": "^1.6.0",
    "date-fns": "^2.16.1",
    "date-fns-timezone": "^0.1.4",
    "ethers": "^5.0.24",
    "form-data": "^3.0.0",
    "graphql": "^15.4.0",
    "graphql-request": "^3.4.0",
    "graphql-scalars": "^1.7.0",
    "graphql-type-json": "^0.3.2",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-helmet": "^6.0.0",
    "koa-joi-controllers": "^1.2.3",
    "koa-router": "^10.0.0",
    "lodash": "^4.17.20",
    "memoizee": "^0.4.14",
    "memoizee-decorator": "^1.0.3",
    "node-fetch": "^2.6.1",
    "pg": "^8.5.1",
    "promptly": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "subscriptions-transport-ws": "^0.9.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.1.1",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/jest": "^26.0.19",
    "@types/koa": "^2.11.6",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-router": "^7.4.1",
    "@types/node-fetch": "^2.5.7",
    "@types/pg": "^7.14.7",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "sinon": "^9.2.2",
    "ts-jest": "^26.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "npm install"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint .",
      "git add"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false
  }
}
